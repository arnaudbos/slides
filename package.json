{
  "name": "slides",
  "version": "0.0.0",
  "author": "Igor Laborie <ilaborie@gmail.com>",
  "license": "MIT",
  "scripts": {
    "copy:monaco": "cp -r node_modules/monaco-editor/min src/main/web/scripts/monaco-editor/",
    "postinstall": "npm-run-all copy:*",
    "serve": "ts-node src/main/typescript/server.ts",
    "style:slides": "node-sass src/main/style/slides.scss --output src/main/web/",
    "style:print": "node-sass src/main/style/print.scss --output src/main/web/",
    "style:cssIsAwesome": "node-sass src/main/slides-style/cssIsAwesome.scss --output src/main/web/",
    "style:jsFunctional": "node-sass src/main/slides-style/jsFunctional.scss --output src/main/web/",
    "style:jvmFunctional": "node-sass src/main/slides-style/jvmFunctional.scss --output src/main/web/",
    "style:koltinBbl": "node-sass src/main/slides-style/kotlinBbl.scss --output src/main/web/",
    "style:koltinHandsOn": "node-sass src/main/slides-style/kotlinHandsOn.scss --output src/main/web/",
    "style:deepDiveKotlin": "node-sass src/main/slides-style/deepDiveKotlin.scss --output src/main/web/",
    "style:bbl": "node-sass src/main/slides-style/bbl.scss --output src/main/web/",
    "style:jug": "node-sass src/main/slides-style/jug.scss --output src/main/web/",
    "style:gdg": "node-sass src/main/slides-style/gdg.scss --output src/main/web/",
    "style:breizhcamp": "node-sass src/main/slides-style/breizhcamp.scss --output src/main/web/",
    "style:devfest-tls": "node-sass src/main/slides-style/devfest-tls.scss --output src/main/web/",
    "style:devoxx-ma": "node-sass src/main/slides-style/devoxx-ma.scss --output src/main/web/",
    "style:sunnytech": "node-sass src/main/slides-style/sunnytech.scss --output src/main/web/",
    "style:devoxx-fr": "node-sass src/main/slides-style/devoxx-fr.scss --output src/main/web/",
    "start": "run-p -nl serve \"style:** -- --watch\"",
    "publish": "gh-pages --dist src/main/web"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/marked": "^0.4.0",
    "@types/prismjs": "^1.9.0",
    "@types/puppeteer": "^1.0.0",
    "@types/request": "^2.0.8",
    "@types/request-promise-native": "^1.0.10",
    "gh-pages": "^1.0.0",
    "highlight.js": "^9.12.0",
    "husky": "^0.14.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "ts-node": "^6.0.0"
  },
  "dependencies": {
    "@types/morgan": "^1.7.35",
    "@types/node": "8",
    "express": "^4.16.2",
    "marked": "^0.4.0",
    "monaco-editor": "^0.13.0",
    "morgan": "^1.9.0",
    "prismjs": "^1.13.0",
    "puppeteer": "^1.0.0",
    "request": "^2.34",
    "request-promise-native": "^1.0.4",
    "typescript": "^2.5.2"
  }
}
